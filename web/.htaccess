# Configuraci√≥n para Caja de Ahorro en HostGator
# Evita que WordPress intercepte esta carpeta

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /caja/
  
  # Si el archivo o carpeta existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Si no existe, mandar todo al index.html (para React)
  RewriteRule ^ index.html [L]
</IfModule>

# Asegurar que reconozca el index
DirectoryIndex index.html

# Impedir listado de directorios
Options -Indexes
