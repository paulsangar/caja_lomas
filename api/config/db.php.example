$host = 'localhost'; // Normalmente localhost en HostGator
$db_name = 'caja_ahorro';
$username = 'root'; // Usuario de DB en HostGator
$password = ''; // Contrase침a de DB en HostGator

try {
    $pdo = new PDO("mysql:host=$host;dbname=$db_name;charset=utf8", $username, $password);
    $pdo->setAttribute(PDO::ATTR_ERRMODE, PDO::ATTR_ERRMODE_EXCEPTION);
    $pdo->setAttribute(PDO::ATTR_DEFAULT_FETCH_MODE, PDO::ATTR_FETCH_ASSOC);
} catch (PDOException $e) {
    // En producci칩n, no mostrar el error detallado
    die("Error de conexi칩n: " . $e->getMessage());
}
